<div class="container">
  <div class="col-md-6">
    <h2 class="text-left my-3">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if flash[:recaptcha_error] %>
        <%= flash[:recaptcha_error] %>
      <% else %>
        <%= devise_error_messages! %>
      <% end %>

      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, autofocus: true, placeholder: 'First name', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, autofocus: true, placeholder: 'Last name', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, placeholder: 'example@example.com', class: 'form-control' %>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
          <% end %>
        </div>

        <div class="form-group col-md-6">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= recaptcha_tags %>
      </div>

      <%= f.submit "Sign up", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
